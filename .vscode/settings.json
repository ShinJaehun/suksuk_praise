{
  // "ruby.interpreter.commandPath": "/home/shinjaehun/.asdf/shims/ruby",

  "rubyLsp.rubyVersionManager": {
    "identifier": "asdf"
  },

  // Ruby / Rails formatting (project policy)
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // ERB: Ruby LSP로 포맷하지 말고(무반응 케이스), ERB formatter 확장으로 분리
  // (확장 설치 후 적용)
  "files.associations": {
    "*.html.erb": "erb"
  },
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
    "editor.formatOnSave": true
  },

  // ERB Beautify를 Bundler로 실행(프로젝트 Gemfile의 htmlbeautifier 사용)
  "vscode-erb-beautify.useBundler": true,
  
  // JS는 이 레포에서 저장 포맷을 원할 때만 켜기
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": false
  },

  // 안전 기본값: 붙여넣기 포맷은 끔(원하면 true로)
  "editor.formatOnPaste": false
}

