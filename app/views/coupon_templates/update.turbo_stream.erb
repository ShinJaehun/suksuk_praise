<%= turbo_stream.update "mine" do %>
  <%= render partial: "mine", locals: { templates: policy_scope(CouponTemplate).order(:title) } %>
<% end %>

<%# ✅ admin이 라이브러리 항목을 수정/토글한 경우 library도 갱신 %>
<% if current_user.admin? && defined?(@library) && @library.present? %>
  <%= turbo_stream.update "library" do %>
    <%= render partial: "library_admin", locals: { templates: @library } %>
  <% end %>
<% end %>

