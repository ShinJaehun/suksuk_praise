<h1 class="text-xl font-bold mb-4"><%= t("coupon_templates.index.title") %></h1>
<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <!-- Personal (항상 위) -->
  <section class="bg-white rounded-lg border shadow-sm p-4">
    <h2 class="text-lg font-semibold mb-1"><%= t("coupon_templates.tabs.mine") %></h2>

    <%= turbo_frame_tag "mine" do %>
      <%= render partial: "mine_section", locals: { items: @mine_rows } %>
    <% end %>
  </section>
  <!-- Library -->
  <section class="bg-white rounded-lg border shadow-sm p-4">
    <h2 class="text-lg font-semibold mb-1"><%= t("coupon_templates.tabs.library") %></h2>
    
    <%= turbo_frame_tag "library" do %>
      <%= render partial: "library_section",
            locals: { templates: @library, library_admin: @library_admin } %>      
    <% end %>
  </section>
</div>
<%= turbo_frame_tag :modal %>
