<h1 class="text-xl font-semibold mb-4">교사 관리</h1>

<div class="mb-4">
  <%= link_to "새 교사 추가", new_admin_teacher_path,
              class: "px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
</div>

<table class="min-w-full bg-white rounded shadow text-sm">
  <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
    <tr>
      <th class="px-4 py-2 text-left">이름</th>
      <th class="px-4 py-2 text-left">이메일</th>
      <th class="px-4 py-2 text-left">생성일</th>
      <th class="px-4 py-2 text-left">담임 교실</th>
      <th class="px-4 py-2 text-right">교실 수</th>
      <th class="px-4 py-2 text-right"></th>
    </tr>
  </thead>
  <tbody>
    <% @rows.each do |row| %>
      <% t = row.teacher %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= t.name %></td>
        <td class="px-4 py-2"><%= t.email %></td>
        <td class="px-4 py-2"><%= l(t.created_at, format: :short) %></td>
        
        <td class="px-4 py-2">
          <% if row.homeroom_names.any? %>
            <%= row.homeroom_names.join(", ") %>
          <% else %>
            <span class="text-gray-500 text-xs">지정 없음</span>
          <% end %>
        </td>
        
        <td class="px-4 py-2 text-right"><%= row.classroom_count %></td>

        <td class="px-4 py-2 text-right">
          <%= link_to "수정",
                edit_admin_teacher_path(t),
                class: "text-blue-700 underline hover:text-blue-900" %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>